<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:padding="1dp"
                android:background="@drawable/ground_line"
                android:contentDescription="The selected zodiac"
                android:src="@drawable/taurus"
                app:layout_constraintBottom_toTopOf="@+id/guideline4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/icon_general"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="5dp"
                android:src="@drawable/general"
                android:background="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/icon_love"
                app:layout_constraintEnd_toStartOf="@+id/text_general1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <ImageView
                android:id="@+id/icon_love"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="5dp"
                android:src="@drawable/love"
                android:background="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/icon_career"
                app:layout_constraintEnd_toStartOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon_general" />

            <ImageView
                android:id="@+id/icon_food"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:padding="5dp"
                android:src="@drawable/food"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/text_wellness"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon_wellness" />

            <ImageView
                android:id="@+id/icon_wellness"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="5dp"
                android:src="@drawable/wellness"
                android:background="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/icon_food"
                app:layout_constraintEnd_toStartOf="@+id/text_wellness"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon_career" />

            <ImageView
                android:id="@+id/icon_career"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="5dp"
                android:src="@drawable/career"
                android:background="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/icon_wellness"
                app:layout_constraintEnd_toStartOf="@+id/text_career"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon_love" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:padding="10dp"
                android:text="Categories"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guideline4" />

            <TextView
                android:id="@+id/text_general1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ground_line"
                android:fontFamily="monospace"
                android:padding="10dp"
                android:text="General"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ground_line"
                android:padding="10dp"
                android:text="Love"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/text_general1" />

            <TextView
                android:id="@+id/text_career"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ground_line"
                android:padding="10dp"
                android:text="Career"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/text_wellness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ground_line"
                android:padding="10dp"
                android:text="Wellness"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/text_career" />

            <TextView
                android:id="@+id/text_food"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ground_line"
                android:padding="10dp"
                android:text="Food"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/text_wellness" />


            <android.support.constraint.Guideline
                android:id="@+id/guideline4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="200dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="201dp"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="60dp"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>